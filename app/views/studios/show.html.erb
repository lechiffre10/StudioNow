<h1>Studio Details</h1>

<h3><%= @studio.name %></h3>
<p>Average Rating: <%=@studio.average_rating  %> </p>

<h3> <%=@studio.name%>'s Availabilities</h3>
	<% if @studio.availabilities.nil? %>
		<p>This Studio currently has no availabilities</p>
	<% else %>
		<ul>
			<% @studio.future_availabilities.each do |availability| %>
				<li><%= render partial: "availabilities/show", locals: {availability: availability } %></li>
			<% end %>
		</ul>	
	<% end %>



<p>Address:<br>
<p><%= @studio.full_address %></p>

<p><%= @studio.description %></p>

<p>$<%= @studio.price %> per hour</p>

<p><%= @studio.website %></p>

<% if @studio.images.any? %>
  <% @studio.images.each do |image| %>
    <%= image_tag image.media.url(:standard)  %>
  <% end %>
<% end %><br>

<%= link_to 'Add Photos', new_studio_image_path(@studio) %>


