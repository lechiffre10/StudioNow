<h1>These are all the studios that you searched for!</h1>

<script src="//maps.google.com/maps/api/js?key=<%=ENV['GOOGLE_MAPS_API_KEY'] %>&libraries=geometry&language=&hl=&region="></script>
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<form id="location-search" action="/studios", method: "get">
  <input name="search" type="text" placeholder="Search for a studio">
  <input type="submit" value="search">
</form>

<div id="map-container">
  <div id="map"></div>
</div>


<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>)
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>





<% if @studios %>
  <div id="studio-list">
    <% @studios.each do |studio| %>
      <%= render partial: "studios/studio", locals: { studio: studio } %>
    <% end %>
  </div>
<% end %>






