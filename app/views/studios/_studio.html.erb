<div class="item">
  <div class="thumbnail">
    <% if studio.images.any? %>
      <%= link_to image_tag(studio.images[0].media.url(:standard), :class => "img-circle team-img") %>
    <% end %>
    <div class="caption">
      <h3><%= link_to studio.name, studio %></h3>
      <p>$<%= studio.price %>/hour</p>
    </div>
  </div>
</div>

