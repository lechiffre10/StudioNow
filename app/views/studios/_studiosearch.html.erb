<div class="search-item col-md-3">
  <div class="thumbnail search-card">
    <% if studio.images.any? %>
      <%= link_to studio_path(studio) do %>
        <%= image_tag studio.images[0].media.url(:standard), :class => "search-thumbnail" %>
      <% end %>
    <% end %>
    <div class="caption search">
      <h3><%= link_to studio.name, studio %></h3>
      <p><%= studio.full_address %></p>
      <p>$<%= studio.price %>/hour</p>
    </div>
  </div>
</div>

