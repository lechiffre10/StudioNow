<h1>These are your conversations!!!</h1>


<br>
<%= link_to "Profile Page", user_path(current_user) %>
<br>
  <% if @conversations %>
    <ul>
      <% @conversations.each do |conversation| %>
        <% if current_user.id == conversation.originator_id %>
          <li>Conversation with <%= link_to find_recipient_name(conversation), conversation_path(conversation) %><br>
            <%= link_to "Delete Conversation", conversation, method: :delete, data: { confirm: "Are you sure?"} %>
          </li>
        <% else %>
          <li>Conversation with <%= link_to find_originator_name(conversation), conversation_path(conversation) %>
            <%= link_to "Delete Conversation", conversation, method: :delete, data: { confirm: "Are you sure?"} %>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>

