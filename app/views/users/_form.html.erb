<%= form_for @user do |f| %>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <%= f.text_field :first_name, :class => "form-control", :placeholder => "First name" %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
              <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last_name" %>
            </div>
        </div>
    </div>
      <div class="row">
      <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
          </div>
      </div>
      <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :genres, :class => "form-control", :placeholder => "Your style of music" %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :username, :class => "form-control", :placeholder => "Username" unless logged_in? %>
          </div>
      </div>
      <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :password, :class => "form-control", :placeholder => "Password" unless logged_in? %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
          <div class="form-group">
            <%= f.file_field :image, :class => "form-control" %>
          </div>
      </div>
      <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :soundcloud_url, :class => "form-control", :placeholder => "Your soundcloud url" %>
          </div>
      </div>
    </div>
    <div class="form-group studio-description">
      <%= f.text_area :description, :class => "form-control", :placeholder => "A little about yourself" %>
    </div>
    <button type="submit" class="btn tf-btn btn-default">Submit</button>
<% end %>


